<section class="content">
  <%= title(t('course') + ' : ' + @course.name) %>

  <section class="content_box">
    <%= render 'one_courses', {:courses => @courses} %>

    <% if can? :update, @course %>
      <%= link_to t('common.edit'), edit_course_path(@course) %> |
    <% end %>
    <% if can? :destroy, @course %>
      <%= button_to t('common.delete'), @course, :confirm => t('common.confirm'), :method => :delete %> |
    <% end %>
    <%= link_to t('common.list'), courses_path %>
  </section>
</section>

<%= render 'documents/list_and_add', {:documentable => @course, :documents => @documents} %>
<%= render 'comments/list_and_add', {:commentable => @course, :comments => @comments} %>
