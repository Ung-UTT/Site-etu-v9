<%= title 'Annonce : ' + @classified.title %>

<p>
  <b>Description :</b>
  <%= @classified.content %>
</p>

<p>
  <b>Prix :</b>
  <%= @classified.price %>€
</p>

<p>
  <b>Lieu :</b>
  <%= @classified.location %>
</p>

<p>
  <b>Appartient à :</b>
  <%= link_to_user @classified.user %>
</p>

<p>
  <b>Tags :</b>
  <%= link_to_tags @classified %>
</p>

<% if can? :update, @classified %>
  <%= link_to 'Modifier', edit_classified_path(@classified) %> |
<% end %>
<% if can? :destroy, @classified %>
  <%= button_to 'Supprimer', @classified, :confirm => 'Sûr ?', :method => :delete %> |
<% end %>
<%= link_to 'Liste des annonces', classifieds_path %>

<%= render 'documents/list_and_add', {:documentable => @classified, :documents => @documents} %>
<%= render 'comments/list_and_add', {:commentable => @classified, :comments => @comments} %>
