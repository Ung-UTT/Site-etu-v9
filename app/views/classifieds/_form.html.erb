<%= form_for(@classified) do |f| %>
  <% f.error_messages %>

  <div class="field">
    <%= f.label :title, 'Titre' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, 'Description' %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :price, 'Prix' %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :location, 'Lieu' %><br />
    <%= f.text_field :location %>
  </div>
  <div class="actions">
    <%= f.submit, 'Envoyer' %>
  </div>
<% end %>
