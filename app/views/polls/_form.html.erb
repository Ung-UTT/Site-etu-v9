<%= form_for(@poll) do |f| %>
  <%= f.error_messages %>

  <ul class="fields">
    <li class="field">
      <%= f.label :name, t('polls.name') %>
      <%= f.text_field :name %>
    </li>
    <li class="field">
      <%= f.label :description, t('polls.description') %>
      <%= f.text_area :description %>
    </li>

<!-- TODO: Modifier les rÃ©ponses depuis ce formulaire ! -->
    <ul>
      <% @poll.answers.each do |q| %>
        <li><%= q.content %> <%= button_to 'X', q, :confirm => t('common.confirm'), :method => :delete %></li>
      <% end %>
    </ul>

    <%= form_for(@poll.answers.new) do |f| %>
      <%= f.hidden_field :poll_id %>
      <%= f.text_field :content %>
      <%= f.submit t('common.add') %>
    <% end %>


    <li class="actions">
      <%= f.submit t('common.submit') %>
    </li>
  </ul>
<% end %>
