<%= title 'Horaire : ' + @timesheet.range %>

<p>
  <b>Salle :</b>
  <%= @timesheet.room %>
</p>

<p>
  <b>Course :</b>
  <%= link_to @timesheet.course.name, @timesheet.course %>
</p>

<p>
  <b>Participants :</b>
  <%= link_to_users @timesheet.users %>
</p>

<% if can? :update, @timesheet %>
  <%= link_to t('common.edit'), edit_timesheet_path(@timesheet) %> |
<% end %>
<% if can? :destroy, @timesheet %>
  <%= button_to t('common.delete'), @timesheet, :confirm => t('common.confirm'), :method => :delete %> |
<% end %>
<%= link_to t('common.list'), timesheets_path %>
