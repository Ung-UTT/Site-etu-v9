<%= form_for(@association) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name, 'Nom' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :parent, 'Association parente' %><br />
    <%= f.select :parent_id, parent_select_options(Association) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
