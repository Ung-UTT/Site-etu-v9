<%= title(t('association') + ' : ' + t('common.list')) %>

<ul>
<% @associations.each do |association| %>
  <li>
    <strong><%= link_to association.name, association %></strong> :<br />
    <%= association.description %>
  </li>
<% end %>
</ul>

<br />

<% if can? :create, Association %>
  <%= link_to t('common.add'), new_association_path %>
<% end %>
