<% title 'News : ' + @news.title %>

<section id="news">
  <%= render 'one_news', {:news => @news} %>

  <% if can? :update, @news %>
    <%= link_to 'Modifier', edit_news_path(@news) %> |
  <% end %>
  <% if can? :destroy, @news %>
    <%= link_to 'Supprimer', @news, :confirm => 'Êtes-vous sûr ?', :method => :delete %> |
  <% end %>
  <%= link_to 'Liste des news', news_index_path %>
</section>

<%= render 'documents/list_and_add', {:documentable => @news, :documents => @documents} %>
<%= render 'comments/list_and_add', {:commentable => @news, :comments => @comments} %>
