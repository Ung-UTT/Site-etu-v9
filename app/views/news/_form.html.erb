<%= form_for(@news) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title, t('newss.title') %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, t('newss.content') %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :event_id, t('newss.event') %><br />
    <%= f.select :event_id, events_select(@news) %>
  </div>
  <div class="field">
    <%= f.label :tag_list, t('tags') %><br />
    <%= f.text_field :tag_list %>
  </div>
  <% if can? :moderate, News %>
    <div class="field">
      <%= f.label :is_moderated, t('newss.is_moderated') %><br />
      <%= f.check_box :is_moderated %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit t('common.submit') %>
  </div>
<% end %>
