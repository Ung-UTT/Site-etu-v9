<%= form_for(@news) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title, 'Titre' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, 'Contenu' %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :event_id, 'Événement associé ?' %><br />
    <%= f.select :event_id, events_select(@news) %>
  </div>
  <div class="field">
    <%= f.label :tag_list, 'Tags' %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit 'Envoyer' %>
  </div>
<% end %>
