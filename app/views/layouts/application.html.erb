<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <%= title_tag %>

  <link rel="shortcut icon" href="<%= image_path 'favicon.ico' %>">

  <%= stylesheet_link_tag :all %>

  <%= csrf_meta_tag %>
</head>

<body>
  <blockquote id="quote"><%= @random_quote.content %></blockquote>

  <%= link_to :root do %>
    <%= image_tag 'style/banner.jpg' %>
  <% end %>

  <ul id="topbar">
    <li id="language-selector">
      <%= link_to image_tag('icons/french.png'),"?locale=fr" %>
      <%= link_to image_tag('icons/english.png'),"?locale=en" %>
      <%= link_to image_tag('icons/chinese.png'),"?locale=zh-CN" %>
    </li>
    <li>
      <%= link_to :root, :title => t('layout.home') do
        image_tag('icons/home.png') + t('layout.home')
      end %>
    </li>
    <li>
      <%= link_to User, :title => t('layout.users') do
        image_tag('icons/users.png') + t('layout.users')
      end %>
    </li>
    <li>
      <%= link_to albums_path, :title => t('layout.albums') do
        image_tag('icons/albums.png') + t('layout.albums')
      end %>
    </li>
    <li>
      <%= link_to classifieds_path, :title => t('layout.classifieds') do
        image_tag('icons/classifieds.png') + t('layout.classifieds')
      end %>
    </li>
    <li>
      <%= link_to :root, :title => t('layout.buckutt') do
        image_tag('icons/buckutt.png') + t('layout.buckutt')
      end %>
    </li>
    <li>
      <%= link_to :root, :title => t('layout.mails') do
        image_tag('icons/mails.png') + t('layout.mails')
      end %>
    </li>
  </ul>

  <ul id="sidebar">
    <li class="box">
      <% if current_user %>
        <%= render :partial => 'user_sessions/menu' %>
      <% else %>
        <%= render :partial => 'user_sessions/login' %>
      <% end %>
    </li>

    <li class="box">
      <h2><%= t('layout.content') %></h2>
      <ul>
        <li><%= link_to t('layout.users'), users_path %></li>
        <li><%= link_to t('layout.albums'), albums_path %></li>
        <li><%= link_to t('layout.annals'), annals_path %></li>
        <li><%= link_to t('layout.classifieds'), classifieds_path %></li>
        <li><%= link_to t('layout.assos'), assos_path %></li>
        <li><%= link_to t('layout.events'), events_path %></li>
        <li><%= link_to t('layout.news'), {:controller => 'news'} %></li>
        <li><%= link_to t('layout.course'), courses_path %></li>
      </ul>
    </li>

    <li class="box">
      <h2>Services</h2>
      <ul>
        <li><%= link_to t('layout.carpools'), carpools_path %></li>
        <li><%= link_to t('layout.polls'), polls_path %></li>
        <li><%= link_to t('layout.projects'), projects_path %></li>
      </ul>
    </li>

    <% if can?(:manage, Role) or can?(:manage, Group) %>
    <li class="box">
      <h2>Administration</h2>
      <ul>
        <li><%= link_to t('layout.timesheets'), timesheets_path %></li>
        <li><%= link_to t('layout.quotes'), quotes_path %></li>
        <li><%= link_to t('layout.groups'), groups_path %></li>
        <li><%= link_to t('layout.roles'), roles_path %></li>
      </ul>
    </li>
    <% end %>

    <li class="box">
      <h2>Liens externes</h2>
      <ul>
        <li><%= link_to 'UTT', 'http://www.utt.fr' %></li>
        <li><%= link_to 'ENT', 'http://ent.utt.fr' %></li>
        <li><%= link_to 'Sports', 'http://www-suaps.utt.fr' %></li>
        <li><%= link_to 'BDE', 'http://bde.utt.fr' %></li>
        <li><%= link_to 'Gala', 'http://gala.utt.fr' %></li>
        <li><%= link_to 'IntÃ©gration', 'http://integration.utt.fr' %></li>
        <li><%= link_to 'La roue verte', 'http://laroueverte.utt.fr' %></li>
        <li><%= link_to 'UTT Arena', 'http://uttarena.org' %></li>
        <li><%= link_to 'Club Argentique UTT', 'http://etu.utt.fr/etu/argentique' %></li>
        <li><%= link_to "N'UTT", 'http://etu.utt.fr/journal' %></li>
      </ul>
    </li>
  </ul>

  <section id="contents">
    <% unless notice.nil? %>
    <p class="notice"><%= notice %></p>
    <% end %>

    <% unless alert.nil? %>
    <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </section>

  <ul id="footer">
    <li><a href="?mobile=true">Version Mobile</a></li>
    <li><%= link_to t('layout.bug'), 'https://github.com/Ung-UTT/Site-etu-v9/issues/new' %></li>
    <li><%= link_to t('layout.about'), {:controller => :home, :action => :about} %></li>
  </ul>

  <%= javascript_include_tag :application %>
</body>
</html>
