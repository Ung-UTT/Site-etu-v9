<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <%= title_tag %>

  <link rel="shortcut icon" href="<%= image_path 'favicon.ico' %>">

  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <section id="quote"><%= @random_quote.content %></section>

    <div id="banner">
      <%= image_tag 'style/banner.jpg' %>
    </div>

    <nav id="menubar">
      <%= link_to image_tag('icons/home.png') + ' Accueil', :root, :title => "Revenir à la page d'accueil." %>
      <%= link_to image_tag("icons/users.png") + " Trombi", users_path, :title => "Viens chercher des infos sur les UTTiens" if current_user %>
      <%= link_to image_tag("icons/news.png") + " Annonces", classifieds_path, :title => "Pour vendre ta tondeuse !" %>
      <%= link_to image_tag("icons/buckutt.png") + " Buckutt", :root, :title => "Recharge ton compte pour payer au foyer." if current_user %>
      <%= link_to image_tag("icons/emails.png") + " Mails", :root, :title => "Accède à tes emails depuis le site étu." if current_user %>
    </nav>
  </header>

  <div id="wrap">
    <aside id="sidebar">
      <section id="login_box">
        <% if current_user %>
          <%= render :partial => 'user_sessions/menu' %>
        <% else %>
          <%= render :partial => 'user_sessions/login' %>
        <% end %>
      </section>

      <nav>
        <h2>Contenus</h2>
        <ul>
          <li><%= link_to_if_can 'Annales', Annal %></li>
          <li><%= link_to_if_can 'Annonces', Classified %></li>
          <li><%= link_to_if_can 'Associations', Association %></li>
          <li><%= link_to_if_can 'Citations', Quote %></li>
          <li><%= link_to_if_can "Cumul d'emploi du temps", Timesheet %></li>
          <li><%= link_to_if_can 'Covoiturage', Carpool %></li>
          <li><%= link_to_if_can 'Événements', Event %></li>
          <li><%= link_to_if_can 'News', News %></li>
          <li><%= link_to_if_can 'Projets', Project %></li>
          <li><%= link_to_if_can 'Trombi', User %></li>
          <li><%= link_to_if_can 'UVs', Course %></li>
        </ul>
      </nav>
    <% if can?(:manage, Role) or can?(:manage, Group) %>
      <nav>
        <h2>Administration</h2>
        <ul>
          <li><%= link_to_if_can 'Groupes', Group %></li>
          <li><%= link_to_if_can 'Rôles', Role %></li>
        </ul>
      </nav>
    <% end %>

      <nav>
        <h2>Services</h2>
        <ul>
          <li><%= link_to 'ENT', 'http://ent.utt.fr' %></li>
          <li><%= link_to 'Journal', {:controller => 'home', :action => 'newspaper'} %></li>
        </ul>
      </nav>

      <nav>
        <h2>Assos &amp; Clubs</h2>
        <ul>
        <% @associations.each do |asso| %>
          <li><%= link_to asso.name, asso %></li>
        <% end %>
        </ul>
      </nav>
    </aside>

    <section id="content">
      <% unless notice.nil? %>
      <div id="notice"><%= notice %></div>
      <% end %>

      <% unless alert.nil? %>
      <div id="alert"><%= alert %></div>
      <% end %>

      <%= yield %>
    </section>
  </div>

  <footer>
    <ul>
      <li>Version 9.0.0-alpha</li>
      <li><%= link_to 'Signaler un bug', :root %></li>
      <li>UTT Net Group</li>
    </ul>
    <span onclick="this.innerHTML='&#9786;'; alert('Congratz! U found the secret l3v3l!')">&#9785;</span>
  </footer>

  <%= javascript_include_tag :defaults %>
</body>
</html>
