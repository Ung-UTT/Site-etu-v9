<%= title t('user_sessions.login') %>

<%= form_for user_sessions_path do %>
  <div>
    <%= text_field_tag :login, {:placeholder => t('users.login'), :autofocus => 'true', :required => 'required'} %>
  </div>
  <div>
    <%= password_field_tag :password, {:placeholder => t('users.password'), :required => 'required'} %>
  </div>
  <div>
    <%= check_box_tag :remember_me %>
    <%= label_tag :remember_me, t('users.remember_me') %>
  </div>
  <div>
    <%= submit_tag t('common.submit') %>
  </div>
<% end %>

<% if can? :create, User %>
  <%= link_to t('users.add'), new_user_path %>
  <%= link_to t('users.password_reset'), password_reset_path %>
<% end %>
