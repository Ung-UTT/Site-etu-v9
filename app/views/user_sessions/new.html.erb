<%= title t('user_sessions.login') %>

<%= form_for(@user_session) do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.text_field :login, {:placeholder => t('users.login'), :autofocus => 'true', :required => 'required'} %>
  </div>
  <div>
    <%= f.password_field :password, {:placeholder => t('users.password'), :required => 'required'} %>
  </div>
  <div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, t('users.remember_me') %>
  </div>
  <div>
    <%= f.submit t('common.submit') %>
  </div>
<% end %>

<% if can? :create, User %>
  <%= link_to t('users.add'), new_user_path %>
  <%= link_to t('users.password_reset'), password_reset_path %>
<% end %>
