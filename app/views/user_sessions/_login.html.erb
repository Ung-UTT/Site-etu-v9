<h1>Connexion</h1>

<%= form_for @user_session, :url => {:controller => 'user_sessions', :action => "create"} do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <div>
    <%= f.submit 'Login' %>
  </div>
<% end %>