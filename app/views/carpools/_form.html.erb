<%= form_for(@carpool) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :description, t('carpools.description') %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location, t('carpools.location') %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date, t('carpools.date') %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :is_driver, t('carpools.is_driver') %><br />
    <%= f.check_box :is_driver %>
  </div>
  <div class="field">
    <%= f.label :tag_list, t('tags') %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit, t('common.submit') %>
  </div>
<% end %>
