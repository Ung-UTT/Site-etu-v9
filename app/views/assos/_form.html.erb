<%= form_for(@asso) do |f| %>
  <%= f.error_messages %>

  <ul class="fields">
    <li class="field">
      <%= f.label :name, t('assos.name') %>
      <%= f.text_field :name %>
    </li>
    <li class="field">
      <%= f.label :image, t('assos.image') %>
      <%= f.file_field :image %>
    </li>
    <li class="field">
      <%= f.label :description, t('assos.description') %>
      <%= f.text_area :description %>
    </li>
    <li class="field">
      <%= f.label :parent_id, t('assos.parent') %>
      <%= f.select :parent_id, parent_select_options(Asso) %>
    </li>
    <% unless @asso.new_record? %>
    <li class="field">
      <%= f.label :owner_id, t('assos.owner') %>
      <%= f.select :owner_id, users_select(@asso) %>
    </li>
    <% end %>
    <li class="actions">
      <%= f.submit t('common.submit') %>
    </li>
  </ul>
<% end %>
