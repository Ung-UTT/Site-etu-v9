<%= form_for(@annal) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name, t('annals.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, t('annals.description') %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :course_id, t('annals.course') %><br />
    <%= f.select :course_id, Course.all.collect {|c| [ c.name, c.id ] } %>
  </div>
  <div class="field">
    <%= f.label :date, t('annals.date') %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="actions">
    <%= f.submit t('common.submit') %>
  </div>
<% end %>
