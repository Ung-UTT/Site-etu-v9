<%= form_for(@annal) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name, t('annal.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, t('annal.description') %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :course_id, t('annal.course') %><br />
    <%= f.select :course_id, Course.all.collect {|c| [ c.name, c.id ] } %>
  </div>
  <div class="field">
    <%= f.label :date, t('annal.date') %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :tag_list, t('annal.tags') %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit t('annal.submit') %>
  </div>
<% end %>
