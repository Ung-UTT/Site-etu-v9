<section class="content">
  <% if controller.controller_name == 'events' %>
    <%= title t('events.list') %>
  <% else %>
    <h1><%= t('events.list') %></h1>
  <% end %>

  <section class="content_box">
    <% @events.each do |event| %>
	<header class="news_banner">
		 <strong class="date"><%=raw l(event.start_at, :format => '%d <br /> %b') %></strong>
		 <strong><%= link_to event.name, event %></strong> 
	  </em>
	  </header>
    <% end %>
  </section>
  
</section>

<% if can? :create, Event %>
<%= link_to t('common.add'), new_event_path %>
<% end %>