= form_for(@event) do |f|
  = f.error_messages

  %ul.fields
    %li.field
      = f.label :name, t('events.name')
      = f.text_field :name

    %li.field
      = f.label :description, t('events.description')
      = f.text_area :description, class: 'rich-content'

    %li.field
      = f.label :location, t('events.location')
      = f.text_field :location

    %li.field
      = f.label :start_at, t('events.start_at')
      = f.datetime_select :start_at

    %li.field
      = f.label :end_at, t('events.end_at')
      = f.datetime_select :end_at

    %li.field
      = label_tag :assos, t('events.assos')
      = select_tag :assos, select_objects(Asso.all, @event.assos), multiple: true, class: 'chosen'

    %li.actions
      = f.submit t('common.submit')
