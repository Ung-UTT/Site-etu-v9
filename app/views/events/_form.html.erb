<%= form_for(@event) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title, 'Titre' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, 'Description' %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :location, 'Lieu' %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date, 'Date' %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="actions">
    <%= f.submit 'Envoyer' %>
  </div>
<% end %>
