%section.block
  %header
    %section.date
      =raw l(event.start_at, format: '%d <br /> %b') if event.start_at
    %h2
      = link_to event.name, event
    %ul.details
      %li
        %strong= l(event.start_at, format: "%H:%M") if event.start_at
        = ' - ' + l(event.end_at, format: "%H:%M") if event.end_at
      %li
        %strong= t('events.assos')
        = links_to_objects event.assos
      %li
        %strong= t('events.location')
        = event.location

  =md event.description
