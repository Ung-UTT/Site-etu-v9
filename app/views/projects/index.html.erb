<section class="content">
  <% if controller.controller_name == 'projects' %>
    <%= title t('projects.list')%>
  <% else %>
    <h1><%= t('projects.list') %></h1>
  <% end %>

  <section class="content_box">
    <% @projects.each do |project| %>
      <li>
        <strong><%= link_to project.name, project %></strong> :<br />
        <%= project.description %>
      </li>
    <% end %>
    </section>

    <% if can? :create, Project %>
      <%= link_to t('common.add'), new_project_path %>
    <% end %>
</section>

