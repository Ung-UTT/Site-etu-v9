<%= form_for(@project) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name, 'Nom' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description %>
  </div>
  <% unless @project.new_record? %>
  <div class="field">
    <%= f.label :owner_id, 'Changer le chef de projet' %><br />
    <%= f.select :owner_id, User.all.map { |u| [u.login, u.id] } %>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :tag_list, 'Tags' %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit 'Envoyer' %>
  </div>
<% end %>
