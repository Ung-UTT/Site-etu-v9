<%= form_for(@project) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name, t('projects.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, t('projects.description') %><br />
    <%= f.text_area :description %>
  </div>
  <% unless @project.new_record? %>
  <div class="field">
    <%= f.label :owner_id, t('projects.owner') %><br />
    <%= f.select :owner_id, User.all.map { |u| [u.login, u.id] } %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit t('common.submit') %>
  </div>
<% end %>
