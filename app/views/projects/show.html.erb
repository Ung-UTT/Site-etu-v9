<%= title 'Projet : ' + @project.name %>

<p>
  <b>Description :</b>
  <%= @project.description %>
</p>

<p>
  <b>Chef de projet :</b>
  <%= link_to_user @project.owner %>
</p>

<p>
  <b>Participants :</b>
  <%= link_to_users @project.users %>
</p>

<p>
  <b>Tags :</b>
  <%= link_to_tags @project %>
</p>

<% if @project.users.include?(current_user) %>
  <p><%= link_to 'Quitter', disjoin_project_path(@project), :method => 'PUT' %></p>
<% elsif can? :'join', Project %>
  <p><%= link_to 'Rejoindre', join_project_path(@project), :method => 'PUT' %></p>
<% end %>

<% if can? :update, @project %>
  <%= link_to t('common.edit'), edit_project_path(@project) %> |
<% end %>
<% if can? :destroy, @project %>
  <%= button_to t('common.delete'), @project, :confirm => t('common.confirm'), :method => :delete %> |
<% end %>
<%= link_to t('common.list'), projects_path %>

<%= render 'documents/list_and_add', {:documentable => @project, :documents => @documents} %>
<%= render 'comments/list_and_add', {:commentable => @project, :comments => @comments} %>
