<%= form_for(@reminder) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :content, 'Contenu' %><br />
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :tag_list, 'Tags' %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit t('common.submit') %>
  </div>
<% end %>
