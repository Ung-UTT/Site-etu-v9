<%= title 'Utilisateurs' %>

<%= form_tag(users_path, :method => :get) do %>
  <%= text_field_tag :q %>
  <%= submit_tag 'Rechercher' %>
<% end %>

<p><%= @users.count %> utilisateurs</p>

<ul>
<% @users.each do |user| %>
  <li><%= link_to_user user %></li>
<% end %>
</ul>

<br />

<% if can? :create, User %>
  <%= link_to t('common.add'), new_user_path %>
  ou se connecter via un service :
  <%= render 'connect' %>
<% end %>
