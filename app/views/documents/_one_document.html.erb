<%= link_to '#', [documentable, document] %>

<%= link_to document.asset.url do
  if document.image?
    image_tag document.asset.url
  else
    document.asset_file_name
  end
end %>

<% if can? :destroy, document %>
  <%= delete_button image_tag("icons/delete.png"), [documentable, document] %>
<% end %>
