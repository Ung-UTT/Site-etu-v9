<section class="content">
  <%= title(t('group') + ' : ' + @group.name) %>

  <p>
    <strong><%= t('groups.users') %></strong> :
  </p>
  <ul>
    <% if @group.users.empty? %>
    <li><%= t('common.none') %></li>
    <% end %>
    <% @group.users.each do |user| %>
    <li>
      <%= link_to_user user %>
      <%= button_to 'X', disjoin_group_path(@group, user), :confirm => t('common.confirm'), :method => :delete %>
    </li>
    <% end %>
  </ul>

  <% if can? :update, @group %>
    <%= form_for(@group, :url => join_group_path(@group)) do |f| %>
      <ul class="fields">
        <li class="field">
          <%= select_tag :users, users_select(@group), :class => 'chosen' %>
        </li>
        <li class="field">
          <%= f.submit t('common.add') %>
        </li>
      </ul>
    <% end %>
  <% end %>

  <%= render 'layouts/show_actions', {:ressource => @group} %>
</section>
